// ==UserScript==
// @name         Kirka.io Mod Menu
// @namespace    http://tampermonkey.net/
// @version      1.0
// @description  Enhance your Kirka.io gaming experience with this mod menu!
// @author       NexusFusion
// @match        https://kirka.io/
// @grant        none
// ==/UserScript==

(function() {
    'use strict';

    // Function to toggle mod menu visibility
    function toggleModMenu() {
        if (modMenuContainer.style.display === 'none') {
            modMenuContainer.style.display = 'block';
        } else {
            modMenuContainer.style.display = 'none';
        }
    }

    // Function to toggle God Mode
    let godModeEnabled = false;
    function toggleGodMode() {
        godModeEnabled = !godModeEnabled;
        if (godModeEnabled) {
            alert('God Mode enabled!');
            makePlayerInvincible();
        } else {
            alert('God Mode disabled!');
            makePlayerVulnerable();
        }
    }

    // Function to make the player invincible
    function makePlayerInvincible() {
        // Assuming player health is managed by the game
        // Set player health to a very high value or make it infinite
        window.playerHealth = Infinity;
    }

    // Function to make the player vulnerable
    function makePlayerVulnerable() {
        // Reset player health to the default value
        window.playerHealth = 100;
    }

    // Function to increase player speed
    function increaseSpeed() {
        // Assuming player speed is managed by the game
        // Increase player speed by modifying the game's speed variable
        window.playerSpeed += 1;
    }

    // Create the mod menu button
    const modMenuButton = document.createElement('div');
    modMenuButton.innerHTML = 'Mod Menu';
    modMenuButton.style.position = 'absolute';
    modMenuButton.style.top = '20px';
    modMenuButton.style.left = '20px';
    modMenuButton.style.padding = '10px';
    modMenuButton.style.background = '#333';
    modMenuButton.style.color = '#fff';
    modMenuButton.style.cursor = 'pointer';
    modMenuButton.style.zIndex = '9999';
    modMenuButton.addEventListener('click', toggleModMenu);
    document.body.appendChild(modMenuButton);

    // Create the mod menu container
    const modMenuContainer = document.createElement('div');
    modMenuContainer.style.position = 'fixed';
    modMenuContainer.style.top = '50%';
    modMenuContainer.style.left = '50%';
    modMenuContainer.style.transform = 'translate(-50%, -50%)';
    modMenuContainer.style.background = '#fff';
    modMenuContainer.style.border = '2px solid #333';
    modMenuContainer.style.padding = '20px';
    modMenuContainer.style.display = 'none';
    modMenuContainer.style.zIndex = '9999';
    document.body.appendChild(modMenuContainer);

    // Add mod menu options
    const options = [
        {
            label: 'Teleport to Center',
            action: function() {
                window.scrollTo(window.innerWidth / 2, window.innerHeight / 2);
            }
        },
        {
            label: 'Toggle God Mode',
            action: toggleGodMode
        },
        {
            label: 'Increase Speed',
            action: increaseSpeed
        }
        // Add more options as needed...
    ];

    // Create mod menu buttons for each option
    options.forEach(option => {
        const button = document.createElement('button');
        button.innerHTML = option.label;
        button.style.margin = '5px';
        button.addEventListener('click', option.action);
        modMenuContainer.appendChild(button);
    });

})();
